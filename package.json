{
  "name": "goocoucou-webext",
  "version": "1.0.0",
  "description": "Google search result navigator",
  "scripts": {
    "preprocess": "esmo ./scripts/preprocess.ts",
    "dev": "npm-run-all preprocess start",
    "start": "parcel src/manifest.json --host localhost --target webext-dev --config @parcel/config-webextension",
    "build": "parcel build src/manifest.json --target webext-prod --config @parcel/config-webextension",
    "build:analyze": "parcel build src/manifest.json --target webext-prod --config @parcel/config-webextension --reporter @parcel/reporter-bundle-analyzer",
    "start:firefox": "web-ext run --source-dir ./dist  --target=firefox-desktop",
    "start:chromium": "web-ext run --source-dir ./dist --target=chromium",
    "lint": "web-ext lint --source-dir dist",
    "zip": "web-ext build --overwrite-dest --source-dir dist/webext-prod",
    "eslint": "eslint --ignore-pattern src/_locales/ src/**"
  },
  "author": "FOBshippingpoint",
  "license": "MIT",
  "devDependencies": {
    "@parcel/config-webextension": "^2.3.2",
    "@parcel/core": "^2.3.2",
    "@parcel/reporter-bundle-analyzer": "^2.7.0",
    "@types/fs-extra": "^9.0.13",
    "@types/webextension-polyfill": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "chalk": "^5.0.1",
    "child_process": "^1.0.2",
    "chokidar": "^3.5.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "esmo": "^0.14.1",
    "fs-extra": "^10.0.1",
    "kolorist": "^1.5.1",
    "log-symbols": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.3.2",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "web-ext": "^6.7.0"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {
      "sourceMap": false
    }
  },
  "dependencies": {
    "umbrellajs": "^3.3.1"
  }
}
